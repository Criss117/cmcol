---
import { getCollection } from "astro:content";

import SectionContainer from "@/components/ui/SectionContainer.astro";
import FullServiceCard from "@/components/ui/services/FullServiceCard.astro";
import MainLayout from "@/layouts/MainLayout.astro";

const servicesCollection = await getCollection("services");
---

<MainLayout title="Servicios">
  <SectionContainer class="pt-32 pb-5" variant="small">
    <ul class="grid md:grid-cols-2 justify-center gap-5">
      {
        servicesCollection.map((service, index) => (
          <li class={index === 0 ? "md:col-span-2 md:mb-20" : ""}>
            <FullServiceCard service={service} />
          </li>
        ))
      }
    </ul>
  </SectionContainer>
</MainLayout>
