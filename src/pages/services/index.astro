---
import { getCollection } from "astro:content";

import SectionContainer from "@/components/ui/SectionContainer.astro";
import FullServiceCard from "@/components/ui/services/FullServiceCard.astro";
import MainLayout from "@/layouts/MainLayout.astro";

const servicesCollection = await getCollection("services");
---

<MainLayout title="Servicios">
  <SectionContainer class="pb-5">
    <ul class="flex flex-col justify-center gap-x-10 gap-y-20">
      {
        servicesCollection.map((service, index) => (
          <FullServiceCard service={service} reverse={index % 2 === 1} />
        ))
      }
    </ul>
  </SectionContainer>
</MainLayout>
