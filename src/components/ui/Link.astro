---
const variants = {
  outline: "text-primary hover:underline dark:text-white",
  rounded: "bg-slate-200 p-2 rounded-full dark:bg-lightPrimary100",
} as const;

interface Props {
  id?: string;
  href: string;
  class?: string;
  target?: "_blank" | "_self" | "_parent" | "_top";
  variant?: keyof typeof variants;
}

const {
  id,
  href,
  class: className,
  variant = "outline",
  target = "_self",
} = Astro.props;
---

<a
  id={id}
  href={href}
  class:list={[className, variants[variant]]}
  target={target}
>
  <slot />
</a>
